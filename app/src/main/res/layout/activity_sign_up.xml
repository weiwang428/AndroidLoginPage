<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textView_SignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_SignUpName"
        android:layout_alignStart="@+id/textView_SignUpEmail"
        android:text="Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="163dp"
        android:layout_alignLeft="@+id/textView_SignUpEmail" />

    <TextView
        android:id="@+id/textView_SignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_SignUpPswd"
        android:layout_centerVertical="true"
        android:text="Email"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="226dp"
        android:layout_alignLeft="@+id/textView_SignUpPswd" />

    <EditText
        android:id="@+id/editText_SignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_SignUpEmail"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="138dp"
        android:layout_alignLeft="@+id/editText_SignUpEmail" />

    <EditText
        android:id="@+id/editText_SignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_SignUpPswd"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="201dp"
        android:layout_alignLeft="@+id/editText_SignUpPswd" />

    <TextView
        android:id="@+id/textView_SignUpPswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_SignUpPswd"
        android:layout_marginEnd="-127dp"
        android:layout_toStartOf="@+id/button_SignUp"
        android:text="Password"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="288dp"
        android:layout_marginRight="-127dp"
        android:layout_toLeftOf="@+id/button_SignUp" />

    <EditText
        android:id="@+id/editText_SignUpPswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="181dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="275dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp" />

    <Button
        android:id="@+id/button_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:layout_marginStart="127dp"
        android:text="Sign_Up"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="351dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="127dp" />

</RelativeLayout>